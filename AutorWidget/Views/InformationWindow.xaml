<controls:ChildWindow x:Class="AutorWidget.InformationWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="346" Height="162" 
           Title="Information"
           Style="{StaticResource ChildWindowStyle}">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="btnOk" Content="OK" Click="OKButton_Click" Width="75" HorizontalAlignment="Left" Margin="241,49,0,12" />
        <TextBlock Height="70" HorizontalAlignment="Left" Margin="12,12,0,0" Name="txbMessage" Text="{Binding Message}" VerticalAlignment="Top" Width="221" />
    </Grid>
</controls:ChildWindow>
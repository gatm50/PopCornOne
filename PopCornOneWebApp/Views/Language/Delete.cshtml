@model PopCornOneWebApp.Models.Language

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Language</legend>

    <div class="display-label">LanguageName</div>
    <div class="display-field">@Model.LanguageName</div>

    <div class="display-label">Languages</div>
    <div class="display-field">@(Model.Languages == null ? "None" : Model.Languages.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}



<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta name="author" content="The Man in Blue" />
    <meta name="robots" content="all" />
    <meta name="MSSmartTagsPreventParsing" content="true" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link href="@Url.Content("~/Content/themes/modular/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/metroUI/metro.blue.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/datatable/jquery.dataTables_themeroller.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui-1.8.21.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/modular/event_listeners.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modular/class_names.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modular/expand_collapse.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modular/modular.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.dataTables.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#phrasesTable').dataTable({
                "bJQueryUI": true,
                "sPaginationType": "full_numbers"
            }
            );
        });
    </script>
</head>
<body>
    <ul id="top">
        <li id="skipNav"><a href="#menu">Skip to navigation</a> </li>
        <li><a href="#content">Skip to content</a> </li>
    </ul>
    <div id="header">
        <h1>
            <span class="replacement"></span><a href="#"><span class="replacement"></span>The Modular
                Layout</a>
        </h1>
    </div>
    <!-- END #header -->
    <div id="content">
        <div id="modules1">
            <div id="moduleSearch" class="module">
                <h3 class="moduleheader">
                    Languages
                </h3>
                <div class="moduleContent">
                    @{Html.RenderAction("LanguageWidget", "Language");}
                </div>
                <!-- END .moduleContent -->
            </div>
            <!-- END .module -->
            <div id="moduleWeather" class="module">
                <h3 class="moduleheader">
                    Autors
                </h3>
                <div class="moduleContent">
                    <p>
                        <img src="images/icon_sunny.gif" width="39" height="27" alt="Sunny" />
                        <strong>Today:</strong> Sunny with a bit of cloud, 25&deg;C
                    </p>
                </div>
                <!-- END .moduleContent -->
            </div>
            <!-- END .module -->
            <div id="moduleOrigin" class="module">
                <h3 class="moduleheader">
                    Origins
                </h3>
                <div class="moduleContent">
                    <p>
                        <img src="images/icon_sunny.gif" width="39" height="27" alt="Sunny" />
                        <strong>Today:</strong> Sunny with a bit of cloud, 25&deg;C
                    </p>
                </div>
                <!-- END .moduleContent -->
            </div>
            <!-- END .module -->
        </div>
        <!-- END #modules1 -->
        <div id="news" class="module">
            <div class="moduleInner">
                <h2 class="moduleheader">
                    Phrase Editor
                </h2>
                <div class="moduleContent">
                    <ul>
                        <li class="first">
                            <div class="thumbnail">
                                <img src="images/thumbnail1.jpg" width="75" height="75" alt="Thumbnail" />
                            </div>
                            <!-- END .thumbnail -->
                            <h3>
                                How to get ahead without trying
                            </h3>
                            <p>
                                JavaScript is rife with unexplored nooks and crannies that can trip up even the
                                most seasoned programmers. Billy Youkip investigates one of the deepest: the basic
                                question of scope and context.
                            </p>
                        </li>
                        <li>
                            <div class="thumbnail">
                                <img src="images/thumbnail6.jpg" width="75" height="75" alt="Thumbnail" />
                            </div>
                            <!-- END .thumbnail -->
                            <h3>
                                Shout &amp; cheer
                            </h3>
                            <p>
                                This whole memory thing seems to be more important and more complicated than I thought.
                                I have absolutely zero knowledge of software development and related skills, so
                                I never worried about memory leaks
                            </p>
                            @RenderBody()
                        </li>
                    </ul>
                    <div class="clearer">
                    </div>
                </div>
                <!-- END .moduleContent -->
            </div>
            <!-- END .moduleInner -->
            <div class="moduleInner">
                <h3 class="moduleheader">
                    Phrase Editor
                </h3>
                <div class="moduleContent">
                    <table id="phrasesTable">
                        <thead>
                            <tr>
                                <th>
                                </th>
                                <th>
                                    Languages
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.ActionLink("Edit", "Edit") |
                                    @Html.ActionLink("Details", "Details") |
                                    @Html.ActionLink("Delete", "Delete")
                                </td>
                                <td>
                                    Español
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="clearer">
                    </div>
                </div>
                <!-- END .moduleContent -->
            </div>
            <!-- END .moduleInner -->
        </div>
        <!-- END .module -->
        <div id="modules2">
            <!-- Add Widget at right column -->
        </div>
        <!-- END #modules2 -->
        <div class="clearer">
        </div>
    </div>
    <!-- END #content -->
</body>
</html>
